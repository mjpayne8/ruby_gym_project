<form action="/memberships/<%= @membership.id %>" method="post">
  <label for="type">Type: </label>
  <input type="text" name="type" id="type"
    value="<%= @membership.type.capitalize() %>">
  <label for="start-time">Start Time: </label>
  <input type="time" name="start_time" id="start-time"
    value="<%= @membership.start_time() %>">
  <label for="end-time">End Time: </label>
  <input type="time" name="end_time" id="end-time"
    value="<%= @membership.end_time %>">
  <input type="submit" value="submit">
</form>
